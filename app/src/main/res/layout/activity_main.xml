<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/colorGreenLayout"
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="Color green"
                    android:textColor="@android:color/black"
                    android:textSize="25dp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/colorRedLayout"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@+id/colorGreenLayout">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="Color red"
                    android:textColor="@android:color/black"
                    android:textSize="25dp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/colorBlueLayout"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@+id/colorRedLayout">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="Color blue"
                    android:textColor="@android:color/black"
                    android:textSize="25dp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/colorYellowLayout"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@id/colorBlueLayout">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="Color yellow"
                    android:textColor="@android:color/black"
                    android:textSize="25dp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/colorSelectionLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/colorYellowLayout"
                android:layout_marginVertical="10dp">

                <Button
                    android:id="@+id/buttonColorGreen"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="GREEN" />

                <Button
                    android:id="@+id/buttonColorRed"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="RED" />

                <Button
                    android:id="@+id/buttonColorBlue"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/buttonColorGreen"
                    android:text="BLUE" />

                <Button
                    android:id="@+id/buttonColorYellow"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/buttonColorGreen"
                    android:layout_alignParentRight="true"
                    android:text="YELLOW" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/colorSelectionLayout"
                android:layout_centerHorizontal="true"
                android:text="Agata Maciulevic"
                android:textSize="25dp"
                android:paddingBottom="50dp"/>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>